<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="animePU" transaction-type="RESOURCE_LOCAL">

        <class>Data.Anime</class>
        <class>Data.Producer</class>
        <class>Data.Genre</class>
        <class>Data.Demographic</class>
        <class>Data.Users</class>
        <class>Data.UserStat</class>

        <properties>
            <!-- JDBC -->
            <property name="hibernate.hikari.dataSourceClassName" value="org.postgresql.ds.PGSimpleDataSource"/>
            <property name="hibernate.hikari.dataSource.url" value="jdbc:postgresql://localhost:5432/anime_db"/>
            <property name="hibernate.hikari.dataSource.user" value="rudeus"/>
            <property name="hibernate.hikari.dataSource.password" value="sylphi_pants"/>

            <!-- Hikari-specific -->
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.minimumIdle" value="2"/>
            <property name="hibernate.hikari.idleTimeout" value="30000"/>
            <property name="hibernate.hikari.maxLifetime" value="1800000"/>
            <property name="hibernate.hikari.connectionTimeout" value="30000"/>

            <!-- Hibernate -->
            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.jdbc.batch_size" value="100"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.bytecode.provider" value="javassist"/>
            <property name="hibernate.jdbc.batch_versioned_data" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
